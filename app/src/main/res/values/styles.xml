<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="news_category_text_style">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Large</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="news_title_text_style">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Medium</item>
        <item name="android:textColor">#4f4c4c</item>
    </style>

    <style name="news_date_text_style">
        <item name="android:fontFamily">sans_serif-medium</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
    </style>

</resources>

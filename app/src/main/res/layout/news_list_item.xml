<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="@dimen/list_item_height"
    android:padding="@dimen/list_item_padding">

    <TextView
        android:id="@+id/section_name"
        style="@style/news_category_text_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center"
        tools:text="World news"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/author_name"
            style="@style/news_date_text_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            tools:text="Martin Chulov"/>

        <TextView
            android:id="@+id/web_publication_date"
            style="@style/news_date_text_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            tools:text="2018-03-16T18:05:12Z"/>

        <TextView
            android:id="@+id/web_title"
            style="@style/news_title_text_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            tools:text="Turkey claims to have encircled Afrin, besieging up to 200,000"/>

    </LinearLayout>

</LinearLayout>
